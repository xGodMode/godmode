{
    "name": "@xgm/godmode",
    "version": "0.0.8",
    "description": "Test smart contracts in GodMode",
    "main": "dist/gm",
    "files": [
        "/dist",
        "/build",
        "/contracts",
        "/gmContractsInfo",
        "/gm.js",
        "/LICENSE",
        "/README.md",
        "/truffle-config.js"
    ],
    "scripts": {
        "postinstall": "truffle compile",
        "clean": "rm -R node_modules",
        "lint": "eslint src --ext ts",
        "webpack": "webpack --mode development",
        "webpack-dev": "webpack --mode development --watch",
        "test": "npm run test-contracts && npm run test-core",
        "test-contracts": "truffle test ./test/contracts/",
        "test-core": "mocha -r ts-node/register test/core/*.ts",
        "prepublish": "webpack --mode production",
        "publish": "npm run release",
        "release": "dotenv release-it -- --ci --only-version --verbose"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/xGodMode/godmode.git"
    },
    "keywords": [
        "godmode",
        "ethereum",
        "solidity",
        "test",
        "testing",
        "simluate"
    ],
    "author": "Martinet Lee",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/xGodMode/godmode/issues"
    },
    "homepage": "https://github.com/xGodMode/godmode#readme",
    "dependencies": {
        "@makerdao/dai": "^0.31.4",
        "promise": "^8.1.0",
        "web3": "^1.2.7",
        "websocket-as-promised": "^1.1.0",
        "ws": "^7.3.0"
    },
    "peerDependencies": {
        "truffle": "5.x"
    },
    "devDependencies": {
        "@types/chai": "^4.2.13",
        "@types/chai-as-promised": "^7.1.3",
        "@types/mocha": "^8.0.3",
        "@types/node": "^14.11.8",
        "@typescript-eslint/eslint-plugin": "^4.4.0",
        "@typescript-eslint/parser": "^4.4.0",
        "chai": "^4.2.0",
        "chai-as-promised": "^7.1.1",
        "dotenv-cli": "^4.0.0",
        "eslint": "^7.11.0",
        "eslint-config-prettier": "^6.12.0",
        "eslint-plugin-prettier": "^3.1.4",
        "husky": "^4.3.0",
        "lint-staged": "^10.4.2",
        "mocha": "^8.1.3",
        "prettier": "2.1.2",
        "pretty-quick": "^3.0.2",
        "release-it": "*",
        "ts-loader": "^8.0.5",
        "ts-node": "^9.0.0",
        "typescript": "^4.0.3",
        "webpack": "^5.1.3",
        "webpack-cli": "^4.0.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged && lint-staged"
        }
    },
    "lint-staged": {
        "src/*.{js,ts,tsx}": [
            "eslint"
        ]
    },
    "release-it": {
        "git": {
            "commitMessage": "release: v${version}"
        },
        "github": {
            "release": true
        }
    }
}
