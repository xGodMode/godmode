{
    "name": "@xgm/godmode",
    "version": "0.0.8",
    "description": "Test smart contracts in GodMode",
    "main": "dist/gm",
    "engines": {
        "node": "12.*"
    },
    "engineStrict": true,
    "files": [
        "/dist",
        "/build",
        "/gmContractsInfo",
        "/gm.js",
        "/LICENSE",
        "/README.md",
        "/truffle-config.js"
    ],
    "bin": "bin/godmode.js",
    "scripts": {
        "build:bin": "node_modules/typescript/bin/tsc",
        "build:core": "npm run webpack",
        "clean": "rm -R node_modules",
        "lint": "eslint src --ext ts",
        "webpack": "webpack --mode development",
        "webpack-dev": "webpack --mode development --watch",
        "test": "mocha -r ts-node/register test/*.ts",
        "prepublishOnly": "webpack --mode production",
        "publish": "npm run release",
        "release": "dotenv release-it -- --only-version --verbose"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/xGodMode/godmode.git"
    },
    "keywords": [
        "godmode",
        "ethereum",
        "solidity",
        "xgm",
        "xgmstudio",
        "test",
        "testing",
        "simluate",
        "simulation"
    ],
    "contributors": [
        "Martinet Lee",
        "Val <godmodedevs@gmail.com> (https://twitter.com/codevaltweets)"
    ],
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/xGodMode/godmode/issues"
    },
    "homepage": "https://github.com/xGodMode/godmode#readme",
    "dependencies": {
        "@ethersproject/bignumber": "^5.0.13",
        "@makerdao/dai": "^0.31.4",
        "caip": "^0.9.2",
        "promise": "^8.1.0",
        "require-directory": "^2.1.1",
        "web3": "^1.3.1",
        "websocket-as-promised": "^1.1.0",
        "ws": "^7.3.0"
    },
    "peerDependencies": {
        "truffle": "5.x"
    },
    "devDependencies": {
        "@types/chai": "^4.2.13",
        "@types/chai-as-promised": "^7.1.3",
        "@types/mocha": "^8.0.3",
        "@types/node": "^14.11.8",
        "@typescript-eslint/eslint-plugin": "^4.4.0",
        "@typescript-eslint/parser": "^4.4.0",
        "@xgm/contract-library": "0.0.2",
        "chai": "^4.2.0",
        "chai-as-promised": "^7.1.1",
        "dotenv-cli": "^4.0.0",
        "eslint": "^7.11.0",
        "eslint-config-prettier": "^6.12.0",
        "eslint-plugin-prettier": "^3.1.4",
        "ganache-core": "git+https://github.com/xGodMode/ganache-core.git#feat/refactor",
        "husky": "^4.3.0",
        "lint-staged": "^10.4.2",
        "mocha": "^8.1.3",
        "prettier": "2.1.2",
        "pretty-quick": "^3.0.2",
        "release-it": "*",
        "ts-loader": "^8.0.5",
        "ts-node": "^9.0.0",
        "typescript": "^4.0.3",
        "webpack": "^5.1.3",
        "webpack-cli": "^4.0.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged && lint-staged"
        }
    },
    "lint-staged": {
        "src/*.{js,ts,tsx}": [
            "eslint"
        ]
    },
    "release-it": {
        "git": {
            "commitMessage": "release: v${version}"
        },
        "github": {
            "release": true
        }
    }
}
